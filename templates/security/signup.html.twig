<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Easy-notes
            {% endblock %}
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
        <link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css" crossorigin="anonymous">
        <link rel="stylesheet" href="css/security.css" crossorigin="anonymous">
        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}
        </head>
        {% block body %}
            <div class="container">
                {% if error  %}
                    {% for e in error %}
                        <div class="alert alert-danger">
                            {{ e }}
                        </div>
                    {% endfor %}
                {% endif %}

                <div class="container">
                    <div class="d-flex justify-content-center h-100">
                        <div class="card">
                            <div class="card-header">
                                <h3>Sign Up</h3>
                                <div class="d-flex justify-content-end social_icon">
                                    <span>
                                        <i class="fab fa-facebook-square"></i>
                                    </span>
                                    <span>
                                        <i class="fab fa-google-plus-square"></i>
                                    </span>
                                    <span>
                                        <i class="fab fa-twitter-square"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                {{form_start(form)}}
                                <div class="input-group form-group">
                                    {{form_row(form.username)}}

                                </div>
                                <div class="input-group form-group">
                                    {{form_row(form.password)}}
                                </div>
                                <div class="input-group form-group">
                                    {{form_row(form.confirmedPassword)}}
                                </div>

                            </div>
                            <div class="form-group" id="sub">
                                <input type="submit" value="Sign Up" class="btn float-right login_btn" style="right: 10px">
                            </div>

                            {{form_end(form)}}
                            <div class="card-footer">
                                <div class="d-flex justify-content-center links">
                                    Already have an account?<a href="/login">Sign in</a>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a href="#">Forgot your password?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </html>

            <style>
                .required {
                    margin: 0;
                }
                #sub {
                    padding: 15px;
                }
                .form-group {
                    margin-bottom: 16px;
                }
                label {
                    margin-bottom: 0;
                }

                .input-group {
                    margin-bottom: 0;
                }
            </style>
        </html>
    </body>
{% endblock %}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="https://unpkg.com/konva@4.0.12/konva.min.js"></script>
{% block javascripts %}{% endblock %}</html>
